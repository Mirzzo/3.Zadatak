{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Mocha Tests",
            "type": "node",
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
